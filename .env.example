# Twitch OAuth
TWITCH_CLIENT_ID=your_twitch_client_id_here
TWITCH_CLIENT_SECRET=your_twitch_client_secret_here
TWITCH_BOT_USERNAME=your_bot_username_here
TWITCH_BOT_TOKEN=your_bot_oauth_token_here

# Bot Configuration
BOT_PREFIX=!
BOT_COMMANDS_CHANNEL=your_channel_name_here

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=150
AI_TEMPERATURE=0.7

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/twitch_ai_bot
REDIS_URL=redis://localhost:6379

# Web Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Logging
LOG_LEVEL=info
LOG_FILE=logs/bot.log

# Security
JWT_SECRET=your_jwt_secret_here
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Moderation
AUTO_MOD_ENABLED=true
AUTO_MOD_WORDS=blacklisted_words_list
SPAM_THRESHOLD=5
LINK_TIMEOUT=10000

# Features
ENABLE_CHAT_COMMANDS=true
ENABLE_MUSIC_PLAYER=false
ENABLE_GAMES=false
ENABLE_POLL_FEATURES=false

# Docker Configuration
DOCKER_NETWORK=twitch_bot_network
COMPOSE_PROJECT_NAME=twitch_ai_bot